import interfaces.IBoxRobot
import interfaces.IEnvAction
import interfaces.IEnvPerception
import interfaces.IMapRobot
import Robot.RobotMain
import interfaces.IObstacleRobot

namespace Environement{
	// object definition
	//robot already declare
		
	//  lists definition
	/*component Boxeslist{
		provides boxes : IBoxesList
	}
	component RobotsList{
		provides robots : IrobotsList
