	component Dispatcher{
		//requires box : IBoxRobot
		//requires obstacle : IObstacleRobot
		provides robot : IEnvPerception
	}
	component Joinner{
		provides robot : IEnvAction
	}
	
	//  map definition
	ecosystem Map{
		part dispatch : Dispatcher
		part joinner : Joinner
		
		species Box{
			provides robot : IBoxRobot	
		}
		species Obstacle{
			provides robot : IObstacleRobot
		}
		species Robot{
			requires environementPerception : IEnvPerception
			requires environementAction : IEnvAction
			provides map : IMapRobot
			
			part robotMain : RobotMain{
				bind environementAction to environementAction
				bind environementPerception to environementPerception
			}
		}
		//part obstacles : ObstaclesList
		//part robotsList : RobotsList
		//part boxesList : Boxeslist
	}
	
	
}